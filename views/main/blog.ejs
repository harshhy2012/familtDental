<%- include("./partials/header"); -%>

  <section class="row">

    <div class="p-4 p-md-5 mb-4 text-white rounded bg-fd">
      <div class="col-md-6 px-0 blog-head">
        <h1 class="display-4 fst-italic">Latest Blog Post!</h1>
        <p class="lead my-3">Our Clinic has grown to provide a world class facility for the treatment of tooth loss,
          dental cosmetics and advanced restorative dentistry.</p>
      </div>
    </div>

  </section>

  <main class="container-fluid align-items-center">
    <div class="row">
      <div class="col-8 m-5 mt-0 align-items-center">
        <div class="row">
          <% if(blogs.length>0) { %>
            <% blogs.forEach(blog=>{ %>
              <div class="col-md-6">
                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                  <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-success"><%= blog.topic %></strong>
                    <a href="/blog/<%= blog._id %>"><h3 class="mb-0"><%= blog.title %></h3></a>
                    <div class="mb-1 text-muted"><%=  blog.originDate.toLocaleDateString("en-US", { year: 'numeric' , month: 'long' }) %></div>
                    <p class="mb-auto"><%- blog.content %></p>
                    <a href="/blog/<%= blog._id %>" class="stretched-link">Continue reading</a>
                  </div>
                  <div class="col-auto d-none d-lg-block">
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
                  <p>There are no Blogs to display...</p>
          <% } %>

        </div>
      </div>



      <div class="col-3 pe-0 ms-2">

        <div class="p-4 mb-3 bg-light rounded">
          <h4 class="fst-italic">About</h4>
          <p class="mb-0">Customize this section to tell your visitors a little bit about your publication,
            writers,
            content, or something else entirely. Totally up to you.</p>
        </div>

        <div class="p-4">
          <h4 class="fst-italic">Archives</h4>
          <ol class="list-unstyled mb-0">
            <li><a href="#">March 2021</a></li>
            <li><a href="#">February 2021</a></li>
            <li><a href="#">January 2021</a></li>
            <li><a href="#">December 2020</a></li>
            <li><a href="#">November 2020</a></li>
            <li><a href="#">October 2020</a></li>
            <li><a href="#">September 2020</a></li>
            <li><a href="#">August 2020</a></li>
            <li><a href="#">July 2020</a></li>
            <li><a href="#">June 2020</a></li>
            <li><a href="#">May 2020</a></li>
            <li><a href="#">April 2020</a></li>
          </ol>
        </div>

      </div>
    </div>

    <div class="mx-auto">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
  
    </div>
    
  </main>
  </div>

  <%- include("./partials/footer"); -%>